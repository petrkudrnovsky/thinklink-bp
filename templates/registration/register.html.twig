{% extends 'base.html.twig' %}

{% block title %}Registrace{% endblock %}

{% block body %}

    <!-- Source: https://getbootstrap.com/docs/5.0/getting-started/introduction/ -->
    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="w-100" style="max-width: 500px">
            <div class="card shadow p-4">
                <h1 class="text-center mb-2 text-primary">ThinkLink</h1>
                <p class="text-center text-muted mb-4">Vytvořte si nový účet</p>

                <!-- Source: Form customization: https://symfony.com/doc/current/form/form_customization.html -->
                {{ form_start(registrationForm) }}
                    {{ form_errors(registrationForm) }}
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, null, { 'label_attr': {'class': 'form-label'} }) }}
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.name, null, { 'label_attr': {'class': 'form-label'} }) }}
                        {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(registrationForm.name) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, null, { 'label_attr': {'class': 'form-label'} }) }}
                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary w-100 mt-3">Registrovat</button>
                {{ form_end(registrationForm) }}

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Už máte účet? <a href="{{ path('app_login') }}">Přihlaste se</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
