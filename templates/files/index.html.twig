{% extends 'base.html.twig' %}

{% block title %}Nahrané soubory{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Nahrané soubory</h1>
                    <a href="{{ path('app_files_upload') }}" class="btn btn-primary">+ Nahrát nové soubory</a>
                </div>

                <div class="mb-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h4 mb-0">Obrázky</h2>
                        <a href="{{ path('app_files_upload') }}" class="btn btn-outline-secondary btn-sm">Nahrát obrázky</a>
                    </div>
                    {% include 'files/_file_table.html.twig' with {'files': imageFiles} %}
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h4 mb-0">PDF soubory</h2>
                        <a href="{{ path('app_files_upload') }}" class="btn btn-outline-secondary btn-sm">Nahrát PDF</a>
                    </div>
                    {% include 'files/_file_table.html.twig' with {'files': pdfFiles} %}
                </div>

            </div>
        </div>
    </div>
{% endblock %}