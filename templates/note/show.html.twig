{% extends 'base.html.twig' %}

{% block title %}{{ note.title }}{% endblock %}

{% block body %}
    <!-- Source: https://getbootstrap.com/docs/5.0/getting-started/introduction/ -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">

                <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">← Zpět na seznam poznámek</a>
                    <a href="{{ path('app_note_edit', {'slug': note.slug}) }}" class="btn btn-outline-primary">Upravit poznámku</a>
                </div>

                <article class="mb-5">
                    <h1 class="mb-4">{{ note.title }}</h1>
                    <div class="note-content markdown-body">
                        {{ noteContent|escape|thinklink_markdown_to_html|markdown_to_html }}
                    </div>
                    <hr class="my-4">
                </article>
                <!-- Četnosti slov
                <section>
                    <p><strong>Četnosti:</strong></p>
                    <ul>
                        {% for key, value in map %}
                            <li>{{ key }}: {{ value }}</li>
                        {% endfor %}
                    </ul>
                </section> -->

                {{ include('note/_relevantNoteList.html.twig', { relevantNotesStrategies: relevantNotesStrategies, note: note }) }}

            </div>
        </div>
    </div>
{% endblock %}