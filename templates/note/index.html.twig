{% extends 'base.html.twig' %}

{% block title %}Poznámky{% endblock %}

{% block body %}
    <!-- Source: https://getbootstrap.com/docs/5.0/getting-started/introduction/ -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Poznámky</h1>
                    <a href="{{ path('app_note_new') }}" class="btn btn-primary">+ Nová poznámka</a>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                        <tr>
                            <th>Název</th>
                            <th>Vytvořeno</th>
                            <th class="text-center">Akce</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for note in notes %}
                            <tr>
                                <td class="fw-semibold">{{ note.title }}</td>
                                <td>{{ note.createdAt ? note.createdAt|date('d. m. Y H:i') : '–' }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_note_show', {'slug': note.slug}) }}" class="btn btn-sm btn-outline-info">Zobrazit</a>
                                    <a href="{{ path('app_note_edit', {'slug': note.slug}) }}" class="btn btn-sm btn-outline-primary">Upravit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center text-muted">Nenalezeny žádné poznámky</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
