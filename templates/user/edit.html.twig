{% extends 'base.html.twig' %}

{% block title %}Úprava uživatele{% endblock %}

{% block body %}
    <!-- Source: https://getbootstrap.com/docs/5.0/getting-started/introduction/ -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-6">
                <h1 class="text-center mb-4">Upravit uživatele {{ user.name }}</h1>

                {{ include('user/_form.html.twig', {'button_label': 'Upravit'}) }}

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="text-center mt-3">
                        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Zpět na seznam uživatelů</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
