{% extends 'base.html.twig' %}

{% block title %}Seznam uživatelů{% endblock %}

{% block body %}

    <!-- Source: https://getbootstrap.com/docs/5.0/getting-started/introduction/ -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Seznam uživatelů</h1>
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary">+ Nový uživatel</a>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                        <tr>
                            <th>E-mail</th>
                            <th>Jméno</th>
                            <th>Role</th>
                            <th class="text-center">Akce</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td>{{ user.name }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-danger">Administrátor</span>
                                        {% elseif role == 'ROLE_USER' %}
                                            <span class="badge bg-primary">Uživatel</span>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Zobrazit</a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Upravit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">Nenalezeny žádné záznamy</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
